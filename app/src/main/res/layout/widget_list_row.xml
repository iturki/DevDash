<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/app_launcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="DevDash"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textStyle="bold"
            android:textColor="@color/colorWidgetAppName"
            android:layout_toRightOf="@id/app_logo"/>
        <TextView
            android:id="@+id/app_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="DevDash"
            android:textSize="@dimen/abc_text_size_small_material"
            android:textColor="@color/colorWidgetAppPackage"
            android:layout_toRightOf="@id/app_logo"
            android:layout_below="@id/app_name"/>
    </RelativeLayout>


    <ImageButton
        android:id="@+id/app_kill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_widget_kill"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

    <ImageButton
        android:id="@+id/app_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_widget_info"
        android:layout_toLeftOf="@id/app_kill"
        android:layout_centerVertical="true" />
</RelativeLayout>